@Aubergine:#4D3339;
@Straw:#F9EEB0;
@Black:#000;

html{
	background-color:White;
}

body{
	color:@Black;
	background-color:@Straw;
	width:95%;
	margin:5px auto;
	padding:10px;
	font-family:sans-serif;
	font-size:12px;
}


header{
	border-bottom:2px solid @Black;
}

h1, h2, h3{
	color:@Aubergine;
	font-family:serif;
}

h1{
	text-align:center;
	font-size:3em;
	font-weight:bold;
	em{
		color:Red;
	}
}

